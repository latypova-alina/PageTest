  <script>
  $(document).ready(function(){
    $("button").click(function(){
        alert($(window).height() - $(window).scrollTop());
        alert($(window).scrollTop());
        alert($(window).height());
        alert($('#content')[0].scrollHeight);
        alert($('#content').height());
        
    });
});

    var hght = 95;   
    var mrg = 0; 
   
    


    
      $(function(){
   
        var elem = $('#menu');
        var top = $(this).scrollTop();
        
      $(window).scroll(function(){
            top = $(this).scrollTop();
            if (top > 500){
            elem.hide();
            }else{
            elem.show();
            }
            
           if  ($(window).scrollTop() == $(window).height()){
            elem.hide();
            }
          if (top+mrg < hght) {
            elem.css('top', (hght-top));
          } else {
            elem.css('top', mrg);
           
           }
          
      });
   
  });


  </script>
  
